@using ORBTech.DTO
@model List<UrunDTO>
@{
    ViewBag.Title = "UrunListesiPartial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Ürün Listesi</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">Ürün Listesi</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Ürün Listesi</h5>
                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Açıklama</th>
                                <th scope="col">Web URL</th>
                                <th scope="col">Oluşturma Tarihi</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (UrunDTO urun in Model)
                            {
                                <tr>
                                    <th scope="row">@urun.URUN_ID</th>
                                    <td>@urun.BASLIK</td>
                                    <td>@urun.ACIKLAMA</td>
                                    <td>@urun.WEB_URL</td>
                                    <td>@urun.USER_DATE</td>
                                    <td>
                                        <a href="/Admin/UrunDuzenlePartial?URUN_ID=@urun.URUN_ID/"> <i class="bi bi-pencil-fill"></i></a>
                                        <a href="/Admin/UrunSil?URUN_ID=@urun.URUN_ID/"> <i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>
        </div>
    </div>
</section>