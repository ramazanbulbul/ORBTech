@using ORBTech.DTO
@model UrunDTO
@{
    ViewBag.Title = "UrunDuzenlePartial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<div class="pagetitle">
    <h1>Ürün Düzenle</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">Ürün Düzenle</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<div class="card">
    <div class="card-body">
        <h5 class="card-title">Ürün Formu</h5>

        <!-- Horizontal Form -->
        <form method="post" id="theForm" action="/Admin/UrunDuzenle/">
            <div class="row mb-3">
                <input type="hidden" class="form-control" name="URUN_ID" value="@(Model != null ? Model.URUN_ID + "" : "0")" />
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Başlık</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="BASLIK" value="@(Model != null ? Model.BASLIK : "")">
                </div>
            </div>
            <!--<div class="row mb-3">
            <label for="inputEmail3" class="col-sm-2 col-form-label">Açıklama</label>
            <div class="col-sm-10">-->
            <!-- Quill Editor Full -->
            <!--<div class="quill-editor-full">
            </div>-->
            <!-- End Quill Editor Full -->
            <!--</div>
            </div>
            <br />
            <br />
            <br />-->
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Kısa Açıklama</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="KISA_ACIKLAMA" value="@(Model != null ? Model.KISA_ACIKLAMA : "")">
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Açıklama</label>
                <div class="col-sm-10">
                    <textarea class="form-control" id="editorid" name="ACIKLAMA">@(Model != null ? Model.ACIKLAMA : "")</textarea>
                </div>
            </div>
            <div class="row mb-3">
                <label for="inputEmail3" class="col-sm-2 col-form-label">Resim URL</label>
                <div class="col-sm-10">
                    <input type="text" class="form-control" name="RESIM_URL" value="@(Model != null ? Model.RESIM_URL : "")">
                </div>
            </div>
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Kaydet</button>
            </div>
        </form><!-- End Horizontal Form -->
    </div>
</div>
<script src="~/Content/ckeditor/ckeditor.js"></script>
