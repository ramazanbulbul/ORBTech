<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>ORB Teknoloji</title>
    <link rel="stylesheet" href="~/Content/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/Content/css/site.css" />
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <style>
        .nav-link {
            color: white !important;
        }

            .nav-link:hover {
                color: #7065EF !important;
            }
    </style>

</head>
<body>
    <nav>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-dark bg-black border-bottom box-shadow mb-3" style="background-color:black">
            <div class="col-12">
                <a class="navbar-brand"><img src="/Content/img/logo_white.png" alt="Ana Sayfa" class="col-sm-3"></a>
                <button class="navbar-toggler " type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class=" float-right navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            @Html.ActionLink("Ana Sayfa", "Index", "Home", new { }, new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("Ürünlerimiz", "Urunler", "Home", new { }, new { @class = "nav-link text-white" })
                        </li>
                        <li class="nav-item">
                            @Html.ActionLink("İletişim", "Iletisim", "Home", new { }, new { @class = "nav-link text-white" })
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </nav>



    <div class="container">
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted mt-5">
        <partial name="_footer" />
    </footer>
    <script src="~/Content/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://kit.fontawesome.com/214c1c03c5.js" crossorigin="anonymous"></script>
    <script src="~/Content/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
