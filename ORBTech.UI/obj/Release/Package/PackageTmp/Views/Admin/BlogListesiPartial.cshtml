@using ORBTech.DTO
@model List<BlogDTO>
@{
    ViewBag.Title = "BlogListesiPartial";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="pagetitle">
    <h1>Blog Listesi</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Admin/Index/">Ana Sayfa</a></li>
            <li class="breadcrumb-item active">Blog Listesi</li>
        </ol>
    </nav>
</div><!-- End Page Title -->


<section class="section">
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Blog Listesi</h5>
                    <!-- Default Table -->
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Başlık</th>
                                <th scope="col">Kısa Açıklama</th>
                                <th scope="col">Oluşturma Tarihi</th>
                                <th scope="col">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (BlogDTO blog in Model)
                            {
                                <tr>
                                    <th scope="row">@blog.BLOG_ID</th>
                                    <td>@blog.BASLIK</td>
                                    <td>@blog.KISA_ACIKLAMA</td>
                                    <td>@blog.USER_DATE</td>
                                    <td>
                                        <a href="/Admin/BlogDuzenlePartial?BLOG_ID=@blog.BLOG_ID/"> <i class="bi bi-pencil-fill"></i></a>
                                        <a href="/Admin/BlogSil?BLOG_ID=@blog.BLOG_ID/"> <i class="bi bi-trash-fill"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Default Table Example -->
                </div>
            </div>
        </div>
    </div>
</section>
